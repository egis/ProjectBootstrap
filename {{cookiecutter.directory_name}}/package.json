{
  "name": "{{cookiecutter.name}}",
  "moduleName": "{{cookiecutter.name}}",
  "port": 8120,
  "mainFile": "{{cookiecutter.name}}",
  "plugin": "PortalApp",
  "build": {
    "autoImportAll": false
  },
  "scripts": {
    "dev": "rm -rf dist && gulp --gulpfile node_modules/@egis/build-tools/Gulpfile.js --cwd ./ plugin_watch --watch",
    "basic-install": "npm install -g @egis/build-tools@$(cat package.json | jq '.devDependencies[\"@egis/build-tools\"]' | sed 's/\"//g')",
    "setup": "npm run basic-install && npm run update",
    "update": "update-build-tools-deps",
    "test": "echo ok",
    "full": "npm run setup && npm run build && npm test",
    "build": "rm -rf dist/main; rm -rf build/ && gulp --gulpfile node_modules/@egis/build-tools/Gulpfile.js --cwd ./ plugin --env production",
    "update:windows": "sh node_modules/@egis/build-tools/npm-install.sh",
    "full": "npm run setup && npm run build && npm run test"
  },
  "devDependencies": { 
    "@egis/build-tools": "^3.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/egis/{{cookiecutter.directory_name}}.git"
  },
  "version": "1.0.0"
}
